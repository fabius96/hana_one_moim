    <select id="selectTransactionByAccountNumber" parameterType="String"
            resultMap="gatheringTransactionDto">
        SELECT TO_CHAR(transaction_time, 'YY-MM-DD HH24:MI:SS') as transaction_time, transaction_type_code, transaction_category_code, memo, transaction_amount, balance_after_transaction
        FROM gathering_transaction
        WHERE account_number = #{accountNumber}
        ORDER BY transaction_time desc
    </select>

